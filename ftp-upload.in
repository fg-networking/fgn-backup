# this module must be enabled explicitly
DO_FTP=0

ftp_upload()
{
    cd ${BACKUPCACHEDIR}
    echo -n "Starting FTP transfer: "
    date

    ftp -inv <<-BACKUPENDE
	open ${FTP_SERVER}
	user ${FTP_USER} ${FTP_PASS}
	bin
	mkdir ${FTPDIR}
	cd ${FTPDIR}
	pwd
	mput *
	BACKUPENDE

    echo -n "Finished FTP transfer: "
    date
}

