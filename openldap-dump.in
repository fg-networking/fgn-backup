# this module needs to enabled explicitly
DO_OPENLDAP=${DO_OPENLDAP:=0}

dump_openldap()
{
    test -x $(which slapcat) || \
        { echo "ERROR: could not find slapcat " ; return 1 ; }

    rm -f "$DBDUMPDIR/$OPENLDAPDUMP.gz"
    mkdir -pv "$DBDUMPDIR"
    slapcat | gzip -c > "$DBDUMPDIR/$OPENLDAPDUMP.gz"
}

